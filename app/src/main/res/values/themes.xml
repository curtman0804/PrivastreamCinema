<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 🌙 Main app theme -->
    <style name="Theme.Privastream" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorSecondary">@color/navIconDefault</item>
        <item name="android:textColorPrimary">@color/navIconActive</item>

        <!-- 🔧 Apply custom dialog styling -->
        <item name="alertDialogTheme">@style/PrivastreamDialogStyle</item>
    </style>

    <!-- 🖼️ Custom alert dialog fix: readable buttons on white background -->
    <style name="PrivastreamDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHighlight">@android:color/darker_gray</item>
    </style>

</resources>